<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:text="Age" />

    <TextView
        android:id="@+id/txtb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txta"
        android:layout_marginTop="27dp"
        android:text="Height" />

    <TextView
        android:id="@+id/txtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtb"
        android:layout_marginTop="30dp"
        android:text="Major" />

    <TextView
        android:id="@+id/txtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtc"
        android:layout_marginTop="30dp"
        android:text="Birthday" />

    <TextView
        android:id="@+id/txte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Province" />

    <TextView
        android:id="@+id/txtf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txte"
        android:layout_marginTop="31dp"
        android:text="Phone" />

    <TextView
        android:id="@+id/txtg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtf"
        android:layout_marginTop="32dp"
        android:text="Facebook" />

    <TextView
        android:id="@+id/txth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtg"
        android:layout_marginTop="32dp"
        android:text="E-mail" />

    <EditText
        android:id="@+id/etxtb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtc"
        android:layout_alignLeft="@+id/etxtf"
        android:ems="10" />

    <EditText
        android:id="@+id/etxtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtd"
        android:layout_alignLeft="@+id/etxtb"
        android:ems="10" />

    <EditText
        android:id="@+id/etxtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtd"
        android:layout_alignBottom="@+id/txtd"
        android:layout_alignLeft="@+id/etxtc"
        android:ems="10" />

    <EditText
        android:id="@+id/etxta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txta"
        android:layout_alignBottom="@+id/txta"
        android:layout_alignLeft="@+id/etxtb"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etxte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txte"
        android:layout_alignBottom="@+id/txte"
        android:layout_alignLeft="@+id/etxtd"
        android:ems="10" />

    <EditText
        android:id="@+id/etxtf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:ems="10" />

    <EditText
        android:id="@+id/etxtg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtg"
        android:layout_alignBottom="@+id/txtg"
        android:layout_alignLeft="@+id/etxtf"
        android:ems="10" />

    <EditText
        android:id="@+id/etxth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txth"
        android:layout_alignLeft="@+id/etxtg"
        android:ems="10" />

    <Button
        android:id="@+id/btnsave1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etxth"
        android:layout_marginRight="51dp"
        android:text="save" />

</RelativeLayout>
